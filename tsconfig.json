{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove"
  },

  "include": ["svelte/*.svelte", "svelte/*.ts"],
  "exclude": ["node_modules/*", "docs/*"]
}
